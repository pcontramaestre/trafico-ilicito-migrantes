<div class="menu-lateral fixed z-[9998] right-2 top-[35%] flex flex-col gap-4">
  <div class="menu" title="Menú" data-tooltip-placement="left">
    <Image src={menu} alt="Menú" class="cursor-pointer" id="imenu"/>
  </div>
  <div class="home" title="Inicio" data-tooltip-placement="left">
    <a href="/#seccion1-1">
      <Image src={home} alt="Inicio" class="cursor-pointer" id="ihome"/>
    </a>
  </div>
  <div class="ayuda"  title="Ayuda" data-tooltip-placement="left">
    <Image src={ayuda} alt="Ayuda" class="cursor-pointer" id="iayuda"/>
  </div>
</div>



<Popup idInteraccion="imenu" idPopup="popup-lateral"
    contenido= `
      
      <div 
  class="w-screen h-screen bg-cover flex items-center flex-col justify-center gap-4" style="background-image: url('${fondoMenu.src}">

